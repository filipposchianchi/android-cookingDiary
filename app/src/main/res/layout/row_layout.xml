<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/touchLayout"
    android:padding="2dp">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ImmagineLista"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titoloListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ingredientiTitoloList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredienti: "
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="6pt"
                        />
                    <TextView
                        android:id="@+id/ingredientiList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ingredienti"
                        android:layout_marginTop="2dp"
                        android:textSize="6pt"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/paroleChiaveTitoloListText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parole chiave: "
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="6pt"/>
                    <TextView
                        android:id="@+id/paroleChiaveListText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="tags"
                        android:layout_marginTop="2dp"
                        android:textSize="6pt"/>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>